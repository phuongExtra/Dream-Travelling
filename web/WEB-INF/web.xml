<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>DispatchFilter</filter-name>
        <filter-class>phuongln.filters.DispatchFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DispatchFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>TourSearchController</servlet-name>
        <servlet-class>phuongln.controllers.TourSearchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookingController</servlet-name>
        <servlet-class>phuongln.controllers.BookingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountManageController</servlet-name>
        <servlet-class>phuongln.controllers.AccountManageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>phuongln.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteController</servlet-name>
        <servlet-class>phuongln.controllers.DeleteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateTourController</servlet-name>
        <servlet-class>phuongln.controllers.CreateTourController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TourSearchController</servlet-name>
        <url-pattern>/TourSearchController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookingController</servlet-name>
        <url-pattern>/BookingController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountManageController</servlet-name>
        <url-pattern>/AccountManageController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteController</servlet-name>
        <url-pattern>/DeleteController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateTourController</servlet-name>
        <url-pattern>/CreateTourController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>TourSearchController</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>Resource reference to javax.sql.Connection</description>
        <res-ref-name>DBCon</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
